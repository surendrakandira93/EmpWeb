@model ModalFooter

    <div class="modal-footer justify-content-between">

        @if (!Model.OnlyCancelButton)
        {
            <button class="btn" id="@Model.SubmitButtonID" type="submit">

                @Model.SubmitButtonText
            </button>
        }
        <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn" type="button">@Model.CancelButtonText</button>
    </div>
